<%= @tweet.content.html_safe %>
<%= link_to @tweet.user.username, @tweet.user %>
Favorites:<%= @tweet.num_of_favs %>
Retweets: <%= @tweet.num_of_retweets %>
<%= @tweet.created_at.strftime("%D") %>


<% unless current_user.favorites.include? (@tweet) %>
<%= form_tag tweet_favorite_path(@tweet) do%>
<%= submit_tag "Favorite" %>
<% end %>
<% end %>

<% unless current_user == @user %>
<%= form_tag tweet_retweet_path(@tweet) do %>
<%= submit_tag "Retweet" %>
<% end %>
<% end %>


