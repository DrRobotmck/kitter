<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Kitter" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>

    <%= javascript_include_tag "application" %>
  </head>
  <body>

    <div class="navbar navbar-fluid-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Kitter</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">

              <li><%= link_to image_tag('home.png') + "Home", root_path%></li>
              <li><% unless current_user %></li>
              <li><%= link_to "Login", login_path%></li>
              <li><%= link_to "New User", new_user_path%></li>
                  <% end %>

                  <% if current_user %>
              <li><%= link_to image_tag('notification.png', class: 'nav_icon')+"Notifications", user_notifications_path(current_user)%></li>
              <li><%= link_to image_tag('hashtag.png', class: 'nav_icon') + "Discover", hashtags_path %></li>
              <li><%= link_to image_tag('profile.png', class: 'nav_icon')+"Me", user_path(current_user)%></li>
              <li><%= link_to "catlogo", root_path%></li>
              <li><%= link_to image_tag('settings.png', class: 'nav_icon'), edit_user_path(current_user)%></li>
              <li><%= link_to image_tag('write.png', class: 'nav_icon'), new_user_tweet_path(current_user) %></li>
              <li><%= link_to "Logout", logout_path%></li>
                  <% end %>

            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span4">

          <div class="well sidebar-nav home_sidebar">


              <%= link_to @user do %>
              <div id="home_sidebar_user_info" style="background-image:url('<%=@user.background_photo_url%>')">
              <img src="<%= @user.profile_photo_url%>" alt=""/>
              <p><%= @user.name %></p>
              <p><%= "@#{@user.username}" %></p>
              </div>
              <% end %>

              <%= link_to @user do %>
              <div id="home_sidebar_user_stats" class="home_div">

              <li>
                Tweets
                <br>
                 <span class="numbers"><%= @user.tweets.length%></span>
              </li>
              <% end%>

              <%= link_to user_following_path(@user) do %>
              <li>
                Following
                <br>
                <span class="numbers"><%= @user.followers.length %></span>
              </li>
              <% end%>

              <%= link_to user_followers_path(@user) do %>
              <li>
                Followers
                <br>
                <span class="numbers"><%=@user.followees.length%></span>
              </div>
            </li>
              <% end%>
              <div id="tweet_box">
                <%= flash[:notice] %>

                <%= form_for @path do |f| %>
                <%= f.text_field :content, placeholder: 'limit 140 characters',maxlength: 140  %>
                <%= f.submit "Meow!" %>
                <% end %>
              </div>

              <div id="home_sidebar_who_to_follow" class="home_div">
              <p>Who To Follow | <span class="num_link"><%=link_to "View All", users_path%></span></p>


              <% @users.each do |user|  %>
              <% unless current_user == user %>
              <div class="who_to_follow_info">
              <img src="<%=user.profile_photo_url%>" alt="" />
              <div class="follow">
              <p><%= user.name %> <%= link_to "@#{user.username}", user_path(user)  %></p>
              <br>
              <% unless current_user.followers.include?(user) %>
              <%= form_tag user_follow_path(user) do  %>
              <%= submit_tag "Follow" %>
              <% end %>
              <% end %>
              </div>
              </div>
              <% end %>

              <% end %>
              </div>

              <div id="home_sidebar_hashtags" class="home_div">
              <h3>Trends</h3>
              <%@hashtags.each do |hashtag|%>
              <%= link_to "##{hashtag.content}", hashtag_path(hashtag) %>
              <br>
              <% end %>
              </div>

              <div id="home_sidebar_footer" class="home_div">
              &copy; Trinity Montoya 2014
              <br>
              <a href="#">About</a>
              <br>
              <a href="#">Github</a>
              <br>
              <a href="#">Personal Page</a>
              </div>

            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span6">
          <%= bootstrap_flash %>


        <%= yield %>

        </div>
      </div><!--/row-->

    </div> <!-- /container -->

  </body>
</html>
