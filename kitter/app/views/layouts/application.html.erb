<!DOCTYPE html>
<html>
<head>
  <title>Kitter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "bootstrap_and_overrides", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
<nav>
  <%= link_to "Home", root_path%>
  <% unless current_user %>
  <%= link_to "Login", login_path%>
  <%= link_to "New User", new_user_path%>
  <% end %>

  <% if current_user %>
  <%= link_to "New Tweet", new_user_tweet_path(current_user) %>
  <%= link_to "All Users", users_path %>
  <%= link_to "All Tweets", user_tweets_path(current_user) %>
  <%= link_to "Account", edit_user_path(current_user)%>
  <%= link_to "Logout", logout_path%>
  <% end %>
</nav>

<%= yield %>
</div>

</body>
</html>
