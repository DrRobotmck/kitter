<h1>Sign Up</h1>

We'll get you started by collecting this information, and then move on!

<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<br>

<% if @user.errors.present? %>
<% @user.errors.full_messages.each do |msg|  %>
<%= msg %>
<% end %>
<% end %>

<%= form_for @user, url:'/sign_up' do |f|%>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :username %>
<%= f.text_field :username %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<%= f.submit %>

<% end %>
